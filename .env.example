# PostgreSQL Database Configuration
# ⚠️ IMPORTANT: Copy this to .env and fill in your actual credentials
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fraud_detection
DB_USER=postgres
DB_PASSWORD=#puneeth123*
DB_SSLMODE=prefer

# Alternative Database Credentials (for fraud_user)
DB_USER_APP=fraud_user
DB_PASSWORD_APP=fraud_password123

# Kaggle API (for dataset download)
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# Model Training
RANDOM_SEED=42
TRAIN_BATCH_SIZE=128
VAL_BATCH_SIZE=256
LEARNING_RATE=0.001
NUM_EPOCHS=100
EARLY_STOPPING_PATIENCE=10

# Paths
DATA_RAW_PATH=data/raw
DATA_PROCESSED_PATH=data/processed
MODEL_CHECKPOINT_PATH=checkpoints
LOG_PATH=logs

# GNN Model Configuration
GNN_MODEL_TYPE=GraphSAGE  # Options: GraphSAGE, GAT, RGCN
HIDDEN_DIM=128
NUM_LAYERS=3
DROPOUT=0.2

# Dashboard
DASHBOARD_HOST=localhost
DASHBOARD_PORT=8501

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/fraud_detection.log
